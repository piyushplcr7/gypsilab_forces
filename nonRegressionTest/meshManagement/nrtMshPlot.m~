clean;

%% Point mesh

N = 5;
vtx = randn(5,3); elt = (1:5)'; col = randn(5,1);
m = msh(vtx,elt,col);
figure;
plot(m);

%% Segment mesh

N = 30;
m = meshCurve(spirale,N);
m.col = (1 : N)';
figure;
plot(m);
axis equal

%% Triangle mesh

N = 50; rad = 1;
m = mshDisk(N,1);
m.col = rand(,1);
figure;
plot(m);



